<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".class_searchplace.search_go_come">
    <RelativeLayout
        android:id="@+id/li1"
        android:layout_width="match_parent"
        android:background="@color/colorBlu"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/back"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/round_keyboard_arrow_left_white_48dp" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="140dp"
            android:textSize="20dp"
            android:textColor="@color/colorwhite"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập nơi đi - nơi đến" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/li1"
        android:id="@+id/li2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white">

        <EditText
            android:id="@+id/txt_noidi"
            android:inputType="textMultiLine"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="@string/nhapnoidi"
            android:textSize="16dp"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/txt_noiden"
            android:inputType="textMultiLine"
            android:layout_below="@id/txt_noidi"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="@string/nhapnoiden"
            android:textSize="16dp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>
    <TextView
        android:layout_below="@id/li2"
        android:id="@+id/txtcpbmt"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:text="Có phải bạn muốn tìm ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>