<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".XacNhanTaoTKActivity">
    <LinearLayout
        android:id="@+id/li1"
        android:layout_width="match_parent"
        android:background="@color/colorBlu"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/backdndk"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_keyboard_backspace_white_48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/li1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="left|center_vertical"
            android:layout_marginTop="8dp"
            android:text="Xác nhận tạo tài khoản"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="30dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="387dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="left|center_vertical"
                android:text="Bằng việc nhấn vào nút 'Đồng ý' dưới đây, bạn hoàn toàn đồng ý với các Quy định và Quy chế, cũng như các Chính sách của Vexere.com. Cũng như xác nhận bạn đã đọc và hiểu rõ các quy định này."
                android:textColor="@android:color/black"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:text="Tìm hiểu thêm về Quy chế của Vexere.com"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

        <Button
            android:id="@+id/btn_tuchoi"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/darker_gray"
            android:text="@string/No"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20dp" />

        <Button
        android:id="@+id/btn_dongy"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        android:background="#F24B77F3"
        android:text="@string/yes"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20dp" />
    </LinearLayout>


</RelativeLayout>