<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thongtintimve">
    <RelativeLayout
        android:id="@+id/li1"
        android:layout_width="match_parent"
        android:background="@color/colorBlu"

        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/round_keyboard_arrow_left_white_48dp" />
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:textSize="20dp"
            android:textColor="@color/colorwhite"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="140dp"
            android:textSize="20dp"
            android:textColor="@color/colorwhite"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/li2"
        android:layout_below="@+id/li1"
        android:layout_width="match_parent"
        android:background="@color/colorBlu"
        android:layout_height="60dp">
        <ImageButton
            android:layout_alignParentLeft="true"
            android:id="@+id/backbtn"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/round_keyboard_arrow_left_white_24dp" />
        <TextView
            android:id="@+id/ngay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:textSize="20dp"
            android:textColor="@color/colorwhite"
            android:textStyle="bold"
            android:text="02/02/2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageButton
            android:layout_alignParentRight="true"
            android:id="@+id/nextbtn"
            android:layout_marginTop="20dp"
            android:layout_marginRight="100dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_navigate_next_white_18dp" />
    </RelativeLayout>
    <ListView
        android:id="@+id/listview"
        android:layout_below="@+id/li2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>